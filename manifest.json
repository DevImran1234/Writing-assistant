{
  "manifest_version": 3,
  "name": "Writing Assistant",
  "version": "1.0",
  "description": "A Chrome extension to enhance text in textareas.",
  "permissions": [
    "activeTab",
    "storage"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "content.js"
      ]
    }
  ]
}
